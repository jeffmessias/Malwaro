@model Malwaro.Models.Produto

@{
    ViewData["Title"] = Model.Nome.ToString();
}


<div>
    <div class="row">
        <a class="btn btn-outline-info  mx-2" style="min-width: 48px" asp-action="Catalog">
            <i class="fa fa-arrow-left"></i>
        </a>
        @if (User.Identity.IsAuthenticated && User.IsInRole(MalwaroRoles.Admin))
        {
            <a class="btn btn-outline-warning mx-2" style="min-width: 48px" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="fa fa-edit"></i>
            </a>
        }
        <h2 class="mx-2">@Html.DisplayFor(model => model.Nome)</h2>
    </div>
    <hr />
    <div class="row jumbotron border-info shadow-sm">
        <div class="col-4">
            <img src="@Model.ImageURL" alt="@Model.Nome" class="product-detail-image" style="max-width: 100%; height: auto;" />
        </div>
        <div class="col">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProdutoCategoria)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProdutoCategoria)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
            </dl>
            <div class="mb-3">
                <div class="btn btn-outline-success border-success rounded-pill btn-block" asp-controller="Pedidos" asp-action="AddToCarrinho" asp-route-id="@Model.Id">
                    <b>@String.Format("R$ {0:N2}", Model.Valor)</b> <i class="fa fa-cart-plus pl-2"></i>
                </div>
            </div>

        </div>
        <hr />
    </div>
</div>


