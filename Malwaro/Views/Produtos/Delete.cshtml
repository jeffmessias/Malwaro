@model Malwaro.Models.Produto

@{
    ViewData["Title"] = "Apagar Produto";
}


<div>
    <div class="row jumbotron border-danger shadow-sm">
        <div class="col-4">
            <img class="rounded-sm" src="@Model.ImageURL" alt="@Model.Nome" style="max-height: 300px" />
        </div>
        <div class="col">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProdutoCategoria)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProdutoCategoria)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Valor)
                </dt>
                <dd class="col-sm-10">
                    <b>@String.Format("R$ {0:N2}", Model.Valor)</b>
                </dd>
            </dl>
        </div>
        <hr />
    </div>


    <div class="row">

        <form asp-action="Delete">
            <a class="btn btn-outline-info  mx-2" style="min-width: 48px" asp-action="Catalog">
                <i class="fa fa-arrow-left"></i>
            </a>
            <input type="hidden" asp-for="Id" />

            @if (User.Identity.IsAuthenticated && User.IsInRole(MalwaroRoles.Admin))
            {
                <input type="submit" value="Apagar" class="btn btn-outline-danger" />
            }

        </form>
    </div>
</div>
