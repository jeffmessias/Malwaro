@model CheckoutViewModel

@{
    ViewData["Title"] = "Pagamento PIX - Malwaro";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h4><i class="fas fa-qrcode"></i> Pagamento PIX</h4>
                </div>
                <div class="card-body text-center">
                    <p class="text-muted">Escaneie o QR Code abaixo com seu banco ou app PIX</p>

                    <!-- QR Code Simulado -->
                    <div class="mt-4 mb-4" style="background: white; padding: 20px; border: 2px solid #ddd; display: inline-block;">
                        <img src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 200 200' width='250' height='250'%3E%3Crect x='10' y='10' width='30' height='30' fill='black'/%3E%3Crect x='20' y='20' width='10' height='10' fill='white'/%3E%3Crect x='160' y='10' width='30' height='30' fill='black'/%3E%3Crect x='170' y='20' width='10' height='10' fill='white'/%3E%3Crect x='10' y='160' width='30' height='30' fill='black'/%3E%3Crect x='20' y='170' width='10' height='10' fill='white'/%3E%3C/svg%3E" alt="QR Code PIX" />
                    </div>

                    <hr />

                    <!-- Código PIX Copia e Cola -->
                    <div class="mt-4">
                        <p><strong>Ou copie este código PIX:</strong></p>
                        <div class="input-group">
                            <input type="text" class="form-control" id="pixCode" value="00020126580014br.gov.bcb.pix0136xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx520400005303986540510.00" readonly />
                            <button class="btn btn-outline-secondary" type="button" onclick="copiarPix()">
                                <i class="fas fa-copy"></i> Copiar
                            </button>
                        </div>
                    </div>

                    <!-- Informações do Pagamento -->
                    <div class="mt-4 p-3 bg-light rounded">
                        <p><strong>Valor a Pagar:</strong></p>
                        <h3 class="text-success">R$ @Model.Total.ToString("N2")</h3>
                        <p class="text-muted small">Pedido #@Model.PedidoId</p>
                    </div>

                    <!-- Botões de Ação -->
                    <div class="mt-4">
                        <form method="post" asp-action="ConfirmarPagamento" style="display: inline;">
                            <input type="hidden" name="pedidoId" value="@Model.PedidoId" />
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check"></i> Confirmar Pagamento
                            </button>
                        </form>
                        <a href="@Url.Action("Checkout", "Pedidos", new { pedidoId = Model.PedidoId })" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Voltar
                        </a>
                    </div>

                    <p class="text-muted small mt-3">
                        <i class="fas fa-info-circle"></i> Após realizar o pagamento, clique em "Confirmar Pagamento"
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function copiarPix() {
        var pixCode = document.getElementById("pixCode");
        pixCode.select();
        document.execCommand("copy");
        alert("Código PIX copiado para a área de transferência!");
    }
</script>
